<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="edu.pitt.cs.cs1635.rlb97.pawprints.MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLoseClick"
            android:layout_margin="14dp"
            android:text="@string/lose"/>
        <Button
            android:id="@+id/Find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onFindClick"
            android:layout_margin="14dp"
            android:text="@string/find"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/missingReport"
        android:layout_gravity="center"
        android:layout_margin="14dp"
        android:onClick="onPostingClick"/>
    <ImageButton
        android:id="@+id/Message"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/message"
        android:onClick="onMessageClick"
        android:tint="@android:color/holo_blue_dark"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_margin="14dp"
        android:layout_gravity="center"/>

</LinearLayout>
